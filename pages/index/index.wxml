 <view>
  <view class='search'>
    <navigator url='/pages/search/search' class='input'>
      <image class='icon'></image>
      <text class='txt'>商品搜索,共 0 款好物</text>
    </navigator>
  </view>
  <swiper class='banner' indicator-dots="true" autoplay="true" interval="3000" duration="1000">
    <swiper-item wx:for="{{banner}}" wx:key="{{item.id}}">
      <navigator url="{{item.link}}">
        <image src='{{item.image_url}}' backfround-size='cover'></image>
      </navigator>
    </swiper-item>
  </swiper>
  <view class="m-menu">
    <navigator class="item" wx:for="{{channel}}" wx:for-item="item" wx:for-index="index" wx:key="{{item.id}}"   url="{{item.url}}">
      <image src="{{item.icon_url}}" background-size="cover"></image>
      <text>{{item.name}}</text>
    </navigator>
  </view>
  <view class='selectMenu'>
    <view  wx:for="{{selectMenu}}" wx:key="{{item.id}}" class=
    "{{item.id == 'all'?'active':'unactive'}}">
      <text data-value="{{item.id}}" >{{item.title}}</text>
    </view>
  </view>
  <view class='products'>
    <scroll-view>
      <view data-id='{{categoryList.id}}' class='title'> 
        <text>{{categoryList.name}}</text>
      </view>
      <view class='productsList'>
        <block wx:for="{{categoryList.goodsList}}" wx:key="{{item.id}}" >
            <navigator url="../goods/goods?id={{item.id}}" class='item'>
              <image class="img" src="{{item.list_pic_url}}" background-size="cover"></image>
              <view class="name">{{item.name}}</view>
              <view class="price">￥{{item.retail_price}}</view>
          </navigator>
        </block>
      </view>
    </scroll-view>
  </view>
</view>